<Window x:Class="WowMapExplorer.Controls.Splash.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WowMapExplorer.Controls.Splash"
        Title="SplashWindow"
        Width="600"
        Height="450"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None">
    <Window.Background>
        <ImageBrush TileMode="FlipXY" ImageSource="{StaticResource WallPaper}">
        </ImageBrush>
    </Window.Background>
    <Grid>
        <Label Height="50" Margin="19,0,17,10" Name="label2" VerticalAlignment="Bottom"
               Content="{Binding Source={x:Static local:MessageListener.Instance},Path=Message}" Foreground="White"></Label>
    </Grid>
</Window>
