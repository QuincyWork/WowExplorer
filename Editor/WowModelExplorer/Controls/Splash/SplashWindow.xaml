<Window x:Class="WowModelExplorer.Controls.Splash.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WowModelExplorer.Controls.Splash"
        Title="SplashWindow"
        Width="640"
        Height="400"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None">
    <Window.Background>
        <ImageBrush x:Name="_backGroundImage" TileMode="FlipXY" />
    </Window.Background>
    <Grid>
        <Label Name="label2"
               Height="28"
               Margin="19,0,19,5"
               VerticalAlignment="Bottom"
               Content="{Binding Source={x:Static local:MessageListener.Instance},
                                 Path=Message}"
               Foreground="White" />
    </Grid>
</Window>
